{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/vaults/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/vaults",
        "index": "apps/vaults/src/index.html",
        "baseHref": "/",
        "main": "apps/vaults/src/main.tsx",
        "polyfills": "apps/vaults/src/polyfills.ts",
        "tsConfig": "apps/vaults/tsconfig.app.json",
        "assets": ["apps/vaults/src/favicon.ico", "apps/vaults/src/assets"],
        "styles": [],
        "scripts": [],
        "webpackConfig": "@nrwl/react/plugins/webpack"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/vaults/src/environments/environment.ts",
              "with": "apps/vaults/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "vaults:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "vaults:build:development"
        },
        "production": {
          "buildTarget": "vaults:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/vaults/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/vaults"],
      "options": {
        "jestConfig": "apps/vaults/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "i18n-extract": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "yarn run formatjs extract 'apps/vaults/**/*.{ts,tsx}' --out-file i18n-extractions/apps-vaults.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'"
        ]
      }
    },
    "i18n-compile": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "jq -rs 'reduce .[] as $item ({}; . * $item)' i18n-extractions/* > i18n-aggregated-extractions/en.json",
          "yarn run formatjs compile i18n-aggregated-extractions/en.json --ast --out-file apps/vaults/src/assets/lang/en.json",
          "yarn run nx format:write --files libs/vaults/shared/i18n/src/lang/*.json"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
